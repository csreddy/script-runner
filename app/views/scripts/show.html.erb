<%- model_class = Script -%>
<div class="form-actions">
  <%= link_to(raw('<i class="icon-step-backward"></i> Back'), scripts_path, :class => 'btn' ) %>
  <%= link_to(raw('<i class="icon-edit"></i> Edit'), edit_script_path(@script), :class => 'btn') %>
  <%= link_to(raw('<i class="icon-trash"></i> Destroy'),
                      script_path(@script),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger') %>
<%= link_to(raw('<i class="icon-play-circle"></i> Run'), run_path(@script), :class => 'btn btn-success', :remote => true, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }) %> 
</div>

<div class="page-header">
  <h3><%= model_class.human_attribute_name(:script_info) %></h3>
<p class="text-info"><%= @timestamp_msg if (@timestamp.year > 2012) %></p>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @script.name %></dd>
</dl>
<dl class="dl-horizontal">
<dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%=  raw(@script.description) %></dd>
</dl>
<dl class="dl-horizontal">
<dt><strong><%= model_class.human_attribute_name(:command) %>:</strong></dt>
  <dd><pre> <p class='text-success'><%= @script.command %><%= @script.param  %></p></pre></dd>
</dl>

 <%= render 'result' %>



<div class="form-actions">
<%= link_to(raw('<i class="icon-play-circle"></i> Run'), run_path(@script), :remote => true, :class => 'btn btn-success', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }) %> 
    <%= link_to(raw('<i class="icon-edit"></i> Edit'), edit_script_path(@script), :class => 'btn') %>
</div>
<h3>Script Info</h3>



<dl class="dl-horizontal">
 <dt><strong>Script Name: </strong></dt>
<dd><%= @script.name %></dd>
</dl>
<dl class="dl-horizontal">
 <dt><strong>Description:</strong></dt>
<dd><%= @script.description %></dd>
</dl>
<dl class="dl-horizontal">
 <dt><strong>Host:</strong></dt> 
<dd><%= @host %></dd>
<dl class="dl-horizontal">
 <dt><strong>Command:</strong></dt>
<dd><pre> <p class='text-success'><%= @cmd %> </p></pre><i>*current working dir: </i><%= @pwd %></dd>

 <%= render 'result' %>
